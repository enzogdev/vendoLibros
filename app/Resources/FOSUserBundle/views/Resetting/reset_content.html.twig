{% trans_default_domain 'FOSUserBundle' %}
<h1>Change Password</h1>
{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
<div class="form-group">
    {{ form_row(form.plainPassword.first,{ 'attr': {'class': "form-control", 'placeholder': 'form.password'|trans}, 'label':false }) }}
</div>
<div class="form-group">
    {{ form_row(form.plainPassword.second,{ 'attr': {'class': "form-control", 'placeholder': 'form.password_confirmation'|trans}, 'label':false }) }}
</div>
    <div>
        <input class="btn btn-secondary" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
{{ form_end(form) }}
