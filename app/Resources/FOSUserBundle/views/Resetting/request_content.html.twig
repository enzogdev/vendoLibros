{% trans_default_domain 'FOSUserBundle' %}
<h1>Reset Password</h1>
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="form-group">
        <input type="text" class="form-control" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}" />
    </div>
    <div class="form-group">
        <input class="btn btn-secondary" type="submit" value="{{ 'resetting.request.submit'|trans }}" style="width: 100%"/>
    </div>
</form>
