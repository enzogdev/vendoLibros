{% trans_default_domain 'FOSUserBundle' %}
<h1>Edit your Profile</h1>
{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit edit-user-form' } }) }}

<div class="form-group row">
    <label for="" class="col-sm-3 col-form-label">{{ form_label(form.username) }}</label>
    <div class="col-sm-9">
        {{ form_row(form.username,{ 'attr': {'class': "form-control", 'placeholder': 'form.username'|trans}, 'label':false })}}
    </div>
</div>
<div class="form-group row">
    <label for="" class="col-sm-3 col-form-label">{{ form_label(form.nombre) }}</label>
    <div class="col-sm-9">
        {{ form_row(form.nombre,{ 'attr': {'class': "form-control", 'placeholder': 'form.nombre'|trans}, 'label':false}) }}
    </div>
</div>
<div class="form-group row">
    <label for="" class="col-sm-3 col-form-label">{{ form_label(form.email) }}</label>
    <div class="col-sm-9">
        {{ form_row(form.email,{ 'attr': {'class': "form-control", 'placeholder': 'form.email'|trans}, 'label':false}) }}
    </div>
</div>
<div class="form-group row">
    <label for="" class="col-sm-3 col-form-label">{{ form_label(form.provincia) }}</label>
    <div class="col-sm-9">
        {{ form_row(form.provincia,{ 'attr': {'class': "form-control", 'placeholder': 'form.provincia'|trans}, 'label':false}) }}
    </div>
</div>
<div class="form-group row">
    <label for="" class="col-sm-3 col-form-label">{{ form_label(form.localidad) }}</label>
    <div class="col-sm-9">
        {{ form_row(form.localidad,{ 'attr': {'class': "form-control", 'placeholder': 'form.localidad'|trans}, 'label':false}) }}
    </div>
</div>
<div class="form-group row">
    <label for="" class="col-sm-3 col-form-label">{{ form_label(form.cp) }}</label>
    <div class="col-sm-9">
        {{ form_row(form.cp,{ 'attr': {'class': "form-control", 'placeholder': 'form.cp'|trans}, 'label':false}) }}
    </div>
</div>
<div class="form-group row">
    <label for="" class="col-sm-3 col-form-label">{{ form_label(form.nombre) }}</label>
    <div class="col-sm-9">
        {{ form_row(form.imagen,{ 'attr': {'class': "form-control", 'placeholder': 'form.imagen'|trans}, 'label':false}) }}
    </div>
</div>
{#--------------#}
<div class="form-group">
    {{ form_row(form.current_password,{ 'attr': {'class': "form-control", 'placeholder': 'form.password'|trans}, 'label':false}) }}
</div>
<div class="form-group">
    <input class="btn btn-secondary" type="submit" value="{{ 'profile.edit.submit'|trans }}"/>
</div>
{{ form_end(form) }}
