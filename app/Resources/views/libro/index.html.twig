{% extends 'base.html.twig' %}

{% block body %}
    <h1>Libros list</h1>

    <table>
        <thead>
            <tr>
                <th>Isbn</th>
                <th>Titulo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for libro in libros %}
            <tr>
                <td><a href="{{ path('libro_show', { 'material': libro.material }) }}">{{ libro.isbn }}</a></td>
                <td>{{ libro.titulo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('libro_show', { 'material': libro.material }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('libro_edit', { 'material': libro.material }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('libro_new') }}">Create a new libro</a>
        </li>
    </ul>
{% endblock %}
